<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.android.akshay.MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton

            android:id="@+id/indoor"
            android:src="@drawable/indoor"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:onClick="indoor"
            android:clickable="true"
            android:background="#FFFFFF"
            />

        <TextView
            android:id="@+id/indoortext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="48sp"
            android:gravity="center"
            android:background="#FF9800"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:onClick="reset"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton

            android:id="@+id/outdoor"
            android:src="@drawable/outdoor"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:onClick="outdoor"
            android:clickable="true"
            android:background="#FFFFFF"
            />
        <TextView
            android:id="@+id/outdoortext"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="48sp"
            android:gravity="center"
            android:background="#3F51B5"
            />

    </LinearLayout>

</LinearLayout>
